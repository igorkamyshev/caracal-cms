<html>
	<head>
		<title>{{ seo.title }}</title>
		<meta name="keywords" content="{{ seo.keywords }}" />
		<meta name="description" content="{{ seo.description }}" />

		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

        {% javascripts '@AppBundle/Resources/public/js/ie/html5shiv.js' %}
			<!--[if lte IE 8]><script src="{{ asset_url }}"></script><![endif]-->
        {% endjavascripts %}

        {% stylesheets 'bundles/app/css/main.css' filter='cssrewrite' %}
			<link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% stylesheets 'bundles/app/css/noscript.css' filter='cssrewrite' %}
			<noscript><link rel="stylesheet" href="{{ asset_url }}" /></noscript>
        {% endstylesheets %}

        {% stylesheets 'bundles/app/css/ie8.css' filter='cssrewrite' %}
			<!--[if lte IE 8]><link rel="stylesheet" href="{{ asset_url }}" /><![endif]-->
        {% endstylesheets %}

	</head>
	<body>

		<!-- Wrapper-->
			<div id="wrapper">

				<!-- Nav -->
					<nav id="nav">
						<a href="#me" class="icon fa-home active"><span>Главная</span></a>
						<a href="#work" class="icon fa-folder"><span>Каталог</span></a>
						<a href="#contact" class="icon fa-envelope"><span>Контакты</span></a>
					</nav>

				<!-- Main -->
					<div id="main">

						<!-- Me -->
							<article id="me" class="panel">
								<header>
									<h1>{{ companyName }}</h1>
									<p>{{ companyTagline }}</p>
								</header>
								<a href="#work" class="jumplink pic">
									<span class="arrow icon fa-chevron-right"><span>See my work</span></span>
									<img src="images/me.jpg" alt="" />
								</a>
							</article>

						<!-- Work -->
							<article id="work" class="panel">
								<header>
									<h2>Каталог</h2>
								</header>
								<p>
									Phasellus enim sapien, blandit ullamcorper elementum eu, condimentum eu elit.
									Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia
									luctus elit eget interdum.
								</p>
								<section>
									<div class="row">
										{% for product in products %}
											<div class="4u 12u$(mobile)">
												<a href="#" class="image fit"><img src="{{ product_image_path ~ '/' ~ product.image }}" alt=""></a>
											</div>
										{% endfor %}
									</div>
								</section>
							</article>

						<!-- Contact -->
							<article id="contact" class="panel">
								<header>
									<h2>Связаться</h2>
								</header>
								<form>
									<div>
										<div class="row">
											<div class="6u 12u$(mobile)">
												<input type="text" name="name" placeholder="Имя" />
											</div>
											<div class="6u$ 12u$(mobile)">
												<input type="text" name="email" placeholder="Email" />
											</div>
											<div class="12u$">
												<textarea name="message" placeholder="Сообщение" rows="8"></textarea>
											</div>
											<div class="12u$">
												<input type="submit" value="Отправить" />
											</div>
										</div>
									</div>
								</form>
								<div>
									<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2203.8990595522814!2d84.9453243159585!3d56.46949998075104!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x432694a8120cb8f9%3A0x8d7a190f3a902c24!2z0L_RgC4g0JvQtdC90LjQvdCwLCAzNiwg0KLQvtC80YHQuiwg0KLQvtC80YHQutCw0Y8g0L7QsdC7LiwgNjM0MDUw!5e0!3m2!1sru!2sru!4v1501694463741" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
								</div>
							</article>

					</div>

				<!-- Footer -->
					<div id="footer">
						<ul class="copyright">
							<li>&copy; {{ companyName }} 2017 – {{ year }}.</li><li>Design: <a target="_blank" href="http://html5up.net">HTML5 UP</a></li>
						</ul>
					</div>

			</div>

		<!-- Scripts -->
			{% javascripts
				'@AppBundle/Resources/public/js/jquery.min.js'
            	'@AppBundle/Resources/public/js/skel.min.js'
            	'@AppBundle/Resources/public/js/skel-viewport.min.js'
            	'@AppBundle/Resources/public/js/util.js'
            	'@AppBundle/Resources/public/js/main.js' %}
				<script src="{{ asset_url }}"></script>
			{% endjavascripts %}

			{% javascripts '@AppBundle/Resources/public/js/ie/respond.min.js' %}
				<!--[if lte IE 8]><script src="{{ asset_url }}"></script><![endif]-->
			{% endjavascripts %}

			<script>
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
						(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

				ga('create', '{{ gaID }}', 'auto');
				ga('send', 'pageview');

			</script>
	</body>
</html>
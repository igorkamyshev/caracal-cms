<html>
	<head>
		<title>{{ seo.title }}</title>
		<meta name="keywords" content="{{ seo.keywords }}" />
		<meta name="description" content="{{ seo.description }}" />

		<link rel="shortcut icon" href="{{ template_image_path ~ '/' ~ images.favicon }}" type="image/x-icon">

		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

        {% javascripts '@AppBundle/Resources/public/js/ie/html5shiv.js' %}
			<!--[if lte IE 8]><script src="{{ asset_url }}"></script><![endif]-->
        {% endjavascripts %}

        {% stylesheets 'bundles/app/css/main.css' filter='cssrewrite' %}
			<link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% stylesheets 'bundles/app/css/noscript.css' filter='cssrewrite' %}
			<noscript><link rel="stylesheet" href="{{ asset_url }}" /></noscript>
        {% endstylesheets %}

        {% stylesheets 'bundles/app/css/ie8.css' filter='cssrewrite' %}
			<!--[if lte IE 8]><link rel="stylesheet" href="{{ asset_url }}" /><![endif]-->
        {% endstylesheets %}

	</head>
	<body>

		<!-- Wrapper-->
			<div id="wrapper">

				<!-- Nav -->
					<nav id="nav">
						<a href="#me" class="icon fa-home active"><span>Главная</span></a>
						<a href="#work" class="icon fa-folder"><span>Каталог</span></a>
						<a href="#contact" class="icon fa-phone"><span>Контакты</span></a>
						<a href="#order" class="icon fa-envelope"><span>Заявка</span></a>
					</nav>

				<!-- Main -->
					<div id="main">

						<!-- Me -->
							<article id="me" class="panel">
								<header>
									<h1>{{ companyName }}</h1>
									<p>{{ companyTagline }}</p>
								</header>
                                {% if newTicket %}
									<p class="ticket-info">Заявка принята, мы свяжемся с вами в ближайшее время.</p>
                                {% endif %}
								<a href="#work" class="jumplink pic">
									<span class="arrow icon fa-chevron-right"><span>Открыть каталог</span></span>
									<img src="{{ template_image_path ~ '/' ~ images.logo }}" alt="" />
								</a>
							</article>

						<!-- Work -->
							<article id="work" class="panel">
								<header>
									<h2>Каталог</h2>
								</header>
								<section>
									<div class="row">
										{% for product in products %}
											<div class="4u 12u$(mobile)">
												<a href="{{ path('product', { 'id': product.id }) }}" class="image fit"><img src="{{ product_image_path ~ '/' ~ product.image }}" alt=""></a>
											</div>
										{% endfor %}
									</div>
								</section>
							</article>

						<!-- Contact -->
							<article id="contact" class="panel">
								<header>
									<h2>Контакты</h2>
								</header>
								<div>
									<p>Телефон: <strong>{{ contacts.phone }}</strong></p>
									<p>Email: <strong>{{ contacts.email }}</strong></p>
									<p>Адрес: <strong>{{ contacts.address }}</strong></p>
								</div>
								<div>
									<img class="image fit" src="{{ template_image_path ~ '/' ~ images.map }}" alt="" />
								</div>
							</article>

						<!-- Order -->
							<article id="order" class="panel">
								<header>
									<h2>Оставить заявку</h2>
								</header>
                                {{ form_start(form) }}
									<div>
										<div class="row">
											<div class="6u 12u$(mobile)">
                                                {{ form_widget(form.name) }}
											</div>
											<div class="6u$ 12u$(mobile)">
                                                {{ form_widget(form.email) }}
											</div>
											<div class="12u$">
                                                {{ form_widget(form.message) }}
											</div>
											<div class="12u$">
                                                {{ form_widget(form.submit) }}
											</div>
										</div>
									</div>
                                {{ form_end(form) }}
							</article>

					</div>

				<!-- Footer -->
					<div id="footer">
						<ul class="copyright">
							<li>&copy; {{ companyName }} 2017 – {{ year }}.</li><li>Design: <a target="_blank" href="http://html5up.net">HTML5 UP</a></li>
						</ul>
					</div>

			</div>

		<!-- Scripts -->
			{% javascripts
				'@AppBundle/Resources/public/js/jquery.min.js'
            	'@AppBundle/Resources/public/js/skel.min.js'
            	'@AppBundle/Resources/public/js/skel-viewport.min.js'
            	'@AppBundle/Resources/public/js/util.js'
            	'@AppBundle/Resources/public/js/main.js' %}
				<script src="{{ asset_url }}"></script>
			{% endjavascripts %}

			{% javascripts '@AppBundle/Resources/public/js/ie/respond.min.js' %}
				<!--[if lte IE 8]><script src="{{ asset_url }}"></script><![endif]-->
			{% endjavascripts %}

			<script>
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
						(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

				ga('create', '{{ gaID }}', 'auto');
				ga('send', 'pageview');

			</script>
	</body>
</html>
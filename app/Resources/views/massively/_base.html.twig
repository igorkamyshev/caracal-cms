<!DOCTYPE HTML>
<html>
<head>
    <title>{{ setting_seo_title }}</title>
    <meta name="keywords" content="{{ setting_seo_keywords }}" />
    <meta name="description" content="{{ setting_seo_description }}" />

    <link rel="shortcut icon" href="{{ template_image_path ~ '/' ~ image_favicon }}" type="image/x-icon">
    <link rel="icon" href="{{ template_image_path ~ '/' ~ image_favicon }}" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    {% stylesheets 'bundles/app/massively/css/main.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% stylesheets 'bundles/app/massively/css/noscript.css' filter='cssrewrite' %}
        <noscript><link rel="stylesheet" href="{{ asset_url }}" /></noscript>
    {% endstylesheets %}

</head>
<body class="is-loading">

<!-- Wrapper -->
<div id="wrapper" class="fade-in">

    <!-- Intro -->
    <div id="intro">
        <h1>{{ setting_companyName }}</h1>
        <p>{{ setting_companyTagline|raw }}</p>
        <ul class="actions">
            <li><a href="#header" class="button icon solo fa-arrow-down scrolly">Continue</a></li>
        </ul>
    </div>

    {% block header %}
        <!-- Header -->
        <header id="header">
            <a href="{{ path('homepage') }}" class="logo">{{ setting_companyName }}</a>
        </header>
    {% endblock %}

    <!-- Nav -->
    <nav id="nav">
        <ul class="links">
            <li><a href="{{ path('homepage') }}">{{ setting_companyName }}</a></li>
            <li><a href="{{ path('articles') }}">Статьи</a></li>
        </ul>
        {{ render(controller('AppBundle:SocialLink:showAll')) }}
    </nav>

    <!-- Main -->
    <div id="main">

        {% block content %}
        {% endblock %}

    </div>

    <!-- Footer -->
    <footer id="footer">
        <section>
            {{ render(controller('AppBundle:Default:showContactForm')) }}
        </section>
        <section class="split contact">
            <section class="alt">
                <h3>Адрес</h3>
                <p>{{ contact_address }}</p>
            </section>
            <section>
                <h3>Телефон</h3>
                <p><a href="tel:{{ contact_phone }}">{{ contact_phone }}</a></p>
            </section>
            <section>
                <h3>Email</h3>
                <p><a href="mailto:{{ contact_email }}">{{ contact_email }}</a></p>
            </section>
            <section>
                <h3>Соцсети</h3>
                {{ render(controller('AppBundle:SocialLink:showAll')) }}
            </section>
        </section>
    </footer>

    <!-- Copyright -->
    <div id="copyright">
        <ul>
            <li>&copy; {{ setting_companyName }}</li>
            <li>Created by Caracal CMS</li>
        </ul>
    </div>

</div>

<!-- Scripts -->
{% javascripts
    '@AppBundle/Resources/public/massively/js/jquery.min.js'
    '@AppBundle/Resources/public/massively/js/jquery.scrollex.min.js'
    '@AppBundle/Resources/public/massively/js/jquery.scrolly.min.js'
    '@AppBundle/Resources/public/massively/js/skel.min.js'
    '@AppBundle/Resources/public/massively/js/util.js'
    '@AppBundle/Resources/public/massively/js/main.js' %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

</body>
</html>